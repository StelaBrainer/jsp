<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--Mapeamento das URLs-->

  <servlet>
    <servlet-name>ContatoServlet</servlet-name>
    <servlet-class>com.ola.mundo.app.ContatoServlet</servlet-class><!--nome do pacote com.ola.mundo e depois o nome da classe que começa com maiúsculo-->
  </servlet>
  <servlet-mapping>
    <servlet-name>ContatoServlet</servlet-name>
    <url-pattern>/contatos</url-pattern>
  </servlet-mapping>

</web-app>